@model Department

<form method="post">
    <input asp-for="DeptId" hidden>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Department</h2>
            <hr />
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DeptName)
            @Html.TextBoxFor(model => model.DeptName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DeptName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CompanyId)
            @Html.DropDownListFor(model => model.CompanyId, (SelectList)ViewBag.Companies, "Select a company", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CompanyId)
        </div>


        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-controller="Department" asp-action="Index" class="btn btn-secondary">Bact to Department List</a>


    </div>
</form>


