@model Department

<form method="post" asp-action="Delete">
    <input asp-for= "DeptId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Department</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="DeptName">Department Name: </label>
            <input asp-for="DeptName" disabled class="form-control"></input>
            <span asp-validation-for="DeptName" class="btn-danger"></span>
        </div>
        


        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Department" asp-action="Index" class="btn btn-secondary">Bact to Department List</a>


    </div>
</form>


