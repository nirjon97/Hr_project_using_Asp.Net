@model Company

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="ComName">Company Name: </label>
            <input asp-for="ComName" class="form-control"></input>
            <span asp-validation-for="ComName" class="btn-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Basic">Basic: </label>
            <input asp-for="Basic" class="form-control"></input>
            <span asp-validation-for="Basic" class="btn-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=" HRent"> HRent: </label>
            <input asp-for=" HRent" class="form-control"></input>
            <span asp-validation-for=" HRent" class="btn-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Medical">Medical: </label>
            <input asp-for="Medical" class="form-control"></input>
            <span asp-validation-for="Medical" class="btn-danger"></span>
        </div>
        <div class="mb-3">
            <input type="checkbox"   value="1">
            <label > Is Active</label>
            <span asp-validation-for="IsInactive" class="btn-danger"></span>
        </div>
       
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Company" asp-action="Index" class="btn btn-secondary">Bact to Company List</a>
        
        
    </div>
</form>


