@model IEnumerable<Company>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Company List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Create" class="btn btn-primary" >
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Company
            </a>
        </div>
    </div>
    <br />
    <br />
    

</div>

<table class="table table-bordered table-striped" style="width:100%">
    <tehead>

        <tr>

            <th>
                Company Id
            </th>
            <th>
                Company Name
            </th>
            <th>
                Company Basic
            </th>
            <th>
                Company House Rent
            </th>
            <th>
                Company Medical
            </th>
            <th>
                Company Active status
            </th>
            <th>
                
            </th>
            <th></th>
        </tr>
    </tehead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.ComId
                </td>
                <td>
                    @obj.ComName
                </td>
                <td>
                    @obj.Basic
                </td>
                <td>
                    @obj.HRent
                </td>
                <td>
                    @obj.Medical
                </td>
                <td>
                    @obj.IsInactive
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Company" asp-route-id="@obj.ComId" asp-action="Edit"  class="btn btn-info"><i class="bi bi-pencil-square">Edit </i></a>
                    </div>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Company" asp-route-id="@obj.ComId" asp-action="Delete" class="btn btn-danger"><i class="bi bi-trash-fill">Delete </i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>