@model IEnumerable<AttendanceSummary>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">AttendanceSummary List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="AttendanceSummary" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New AttendanceSummary
            </a>
        </div>
    </div>
    <br />
    <br />
    

</div>

<table class="table table-bordered table-striped" style="width:100%">
    <tehead>

        <tr>

            <th>
                Employee Name
            </th>
            <th>
                year
            </th>
            <th>
                Month
            </th>
           
            <th>
                Present
            </th>
            <th>
                Absent
            </th>
            <th>
                Late
            </th>
            <th>
                Weekend
            </th>
            
            <th></th>
        </tr>
    </tehead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Emp.EmpName
                </td>
                <td>
                    @obj.dtYear
                </td>
                <td>
                    @obj.dtMonth
                </td>
                
                <td>
                    @obj.Present
                </td>
                <td>
                    @obj.Absent
                </td>
                <td>
                    @obj.Late
                </td>
                <td>
                    @obj.Weekend
                </td>
               
                
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="AttendanceSummary" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-info"><i class="bi bi-pencil-square">Edit </i></a>
                    </div>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="AttendanceSummary" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger"><i class="bi bi-trash-fill">Delete </i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>