@model Attendance

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Attendance</h2>
            <hr />
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.dtDate)
            @Html.TextBoxFor(model => model.dtDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
            @Html.ValidationMessageFor(model => model.dtDate)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AttStatus)
            @Html.TextBoxFor(model => model.AttStatus, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.AttStatus)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InTime)
            @Html.TextBoxFor(model => model.InTime, "{0:HH:mm}", new { @class = "form-control", @type = "time" })
            @Html.ValidationMessageFor(model => model.InTime)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OutTime)
            @Html.TextBoxFor(model => model.OutTime, "{0:HH:mm}", new { @class = "form-control", @type = "time" })
            @Html.ValidationMessageFor(model => model.OutTime)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CompanyId)
            @Html.DropDownListFor(model => model.CompanyId, (SelectList)ViewBag.Companies, "Select a company", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CompanyId)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EmpId)
            @Html.DropDownListFor(model => model.EmpId, (SelectList)ViewBag.Employees, "Select an employee", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EmpId)
        </div>
        <hr></hr>
       
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Attendance" asp-action="Index" class="btn btn-secondary">Back to Attendance List</a>
        
        
    </div>
</form>


