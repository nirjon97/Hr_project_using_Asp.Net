@model IEnumerable<Attendance>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Attendance List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Attendance" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Attendance
            </a>
        </div>
    </div>
    <br />
    <br />
    

</div>

<table class="table table-bordered table-striped" style="width:100%">
    <tehead>

        <tr>

            <th>
                Employee Name
            </th>
            <th>
                Attendance Date
            </th>
            <th>
                In time
            </th>
            <th>
                Out time
            </th>
            <th>
                Attendance Status
            </th>
            
            <th></th>
        </tr>
    </tehead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Emp.EmpName
                </td>
                <td>
                    @obj.dtDate.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @obj.InTime.ToString("HH:mm")
                </td>
                <td>
                    @obj.OutTime.ToString("HH:mm")
                </td>
                <td>
                    @obj.AttStatus
                </td>
               
                
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Attendance" asp-route-id="@obj.AttId" asp-action="Edit" class="btn btn-info"><i class="bi bi-pencil-square">Edit </i></a>
                    </div>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Attendance" asp-route-id="@obj.AttId" asp-action="Delete" class="btn btn-danger"><i class="bi bi-trash-fill">Delete </i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>