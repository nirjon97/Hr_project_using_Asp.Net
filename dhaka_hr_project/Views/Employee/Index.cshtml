@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp; Create New Employee
            </a>
        </div>
    </div>
    <br />
    <br />
    

</div>

<table class="table table-bordered table-striped" style="width:100%">
    <tehead>

        <tr>

            <th>
                Employee Name
            </th>
            <th>
                Gender
            </th>
            <th>
                Gross
            </th>
            <th>
                Basic
            </th>
            <th>
                House Rent
            </th>
            <th>
                Medical
            </th>
            <th>
                Others
            </th>
            <th>
                Joining Date
            </th>
          
            
            <th></th>
        </tr>
    </tehead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.EmpName
                </td>
                <td>
                    @obj.Gender
                </td>
                <td>
                    @obj.Gross
                </td>
                <td>
                    @obj.Basic
                </td>
                <td>
                    @obj.HRent
                </td>
                <td>
                    @obj.Medical
                </td>
                <td>
                    @obj.Others
                </td>
                <td>
                    @obj.dtJoin.ToString("yyyy-MM-dd")
                </td>
               
               
                
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Employee" asp-route-id="@obj.EmpId" asp-action="Edit" class="btn btn-info"><i class="bi bi-pencil-square">Edit </i></a>
                    </div>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Employee" asp-route-id="@obj.EmpId" asp-action="Delete" class="btn btn-danger"><i class="bi bi-trash-fill">Delete </i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>