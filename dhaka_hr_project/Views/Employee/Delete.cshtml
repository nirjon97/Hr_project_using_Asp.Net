@model Employee

<form method="post" asp-action="Delete">
    <input asp-for= "EmpId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Employee</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="EmpName">Employee Name: </label>
            <input asp-for="EmpName" disabled class="form-control"></input>
            <span asp-validation-for="EmpName" class="btn-danger"></span>
        </div>
        


        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Bact to Employee List</a>


    </div>
</form>


