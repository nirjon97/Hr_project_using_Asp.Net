@model Salary

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Salary List</h2>
            <hr />
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EmpId)
            @Html.DropDownListFor(model => model.EmpId, (SelectList)ViewBag.Employees, "Select an employee", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EmpId)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dtYear, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.dtYear, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.dtYear, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dtMonth, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.dtMonth, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.dtMonth, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CompanyId)
            @Html.DropDownListFor(model => model.CompanyId, (SelectList)ViewBag.Companies, "Select a company", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CompanyId)
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.IsPaid, htmlAttributes: new { @class = "control-label" })
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(model => model.IsPaid)
                    Is Paid
                </label>
            </div>
            @Html.ValidationMessageFor(model => model.IsPaid, "", new { @class = "text-danger" })
        </div>


        <hr></hr>

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Salary" asp-action="Index" class="btn btn-secondary">Back to Salary List</a>


    </div>
</form>

