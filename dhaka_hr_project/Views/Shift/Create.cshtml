@model Shift

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Shift</h2>
            <hr />
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ShiftName)
            @Html.TextBoxFor(model => model.ShiftName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ShiftName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ShiftIn)
            @Html.TextBoxFor(model => model.ShiftIn, "{0:HH:mm}", new { @type = "datetime-local", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ShiftIn)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ShiftOut)
            @Html.TextBoxFor(model => model.ShiftOut, "{0:HH:mm}", new { @type = "datetime-local", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ShiftOut)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ShiftLate)
            @Html.TextBoxFor(model => model.ShiftLate, "{0:HH:mm}", new { @type = "datetime-local", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ShiftLate)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CompanyId)
            @Html.DropDownListFor(model => model.CompanyId, (SelectList)ViewBag.Companies, "Select a company", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CompanyId)
        </div>
        <hr></hr>
       
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Shift" asp-action="Index" class="btn btn-secondary">Back to Shift List</a>
        
        
    </div>
</form>


