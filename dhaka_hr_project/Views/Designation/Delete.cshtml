@model Designation

<form method="post" asp-action="Delete">
    <input asp-for= "DesigId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Designation</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="DesigName">Designation Name: </label>
            <input asp-for="DesigName" disabled class="form-control"></input>
            <span asp-validation-for="DesigName" class="btn-danger"></span>
        </div>
        


        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Designation" asp-action="Index" class="btn btn-secondary">Bact to Designation List</a>


    </div>
</form>


